<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:onClick="selectrick"
    tools:context=".choiseScreen">

    <ImageView
        android:id="@+id/choosetxt"
        android:layout_width="382dp"
        android:layout_height="169dp"
        android:layout_marginTop="96dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/choosecharacter" />

    <ImageView
        android:id="@+id/rickimg"
        android:contentDescription="Rick's Image"
        android:layout_width="222dp"
        android:layout_height="236dp"
        android:layout_marginStart="5dp"
        android:layout_marginTop="64dp"
        android:layout_marginEnd="200dp"
        android:onClick="selectRick"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.135"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/choosetxt"
        app:srcCompat="@drawable/rick" />

    <ImageView
        android:id="@+id/mortyimg"
        android:contentDescription="Morty's Image"
        android:layout_width="223dp"
        android:layout_height="214dp"
        android:layout_marginStart="200dp"
        android:layout_marginTop="320dp"
        android:onClick="selectmorty"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/choosetxt"
        app:srcCompat="@drawable/morty" />
</androidx.constraintlayout.widget.ConstraintLayout>